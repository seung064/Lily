<UserControl x:Class="Project_Lily.View.UserControl5"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_Lily"
             mc:Ignorable="d" 
             Background="#06223c"
             d:DesignHeight="800" d:DesignWidth="500">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
            <GroupBox Header="Inferna" Foreground="White" Margin="10,10,10,10" FontSize="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>

                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="인페르나" Margin="10,0,0,0" FontSize="20" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3"/>
                    <!--Button Content="X" Width="20" Height="20" Margin="10,0,10,0" Grid.Column="6" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center"/-->

                    <Separator Margin="10,20,10,0" Grid.ColumnSpan="8" Grid.Row="0" />
                    <Image Source="/Assets/Lily.png" Width="140" Height="140" Grid.Row="1" Grid.Column="0" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="3" Grid.RowSpan="3"/>
                    <TextBlock Text="활화산과 용암 지대가 곳곳에 분포" Foreground="White" Height="23" VerticalAlignment="Center" Grid.Row="1" Grid.Column="3"  Grid.ColumnSpan="5" Margin="10" FontSize="12"/>
                    <TextBlock Text="낮은 대기 안정성, 높은 복사열" Foreground="White" Height="23" VerticalAlignment="Center" Grid.Row="2" Grid.Column="3"  Grid.ColumnSpan="5" Margin="10" FontSize="12"/>
                    <TextBlock Text="강한 자기장과 고온 생물체 서식" Foreground="White" Height="23" VerticalAlignment="Center" Grid.Row="3" Grid.Column="3"  Grid.ColumnSpan="5" Margin="10" FontSize="12"/>



                    <TextBlock Text="생산" Foreground="White" FontSize="20" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Separator Margin="10,20,10,0" Grid.ColumnSpan="8" Grid.Row="4" VerticalAlignment="Center"/>


                    <CheckBox IsChecked="{Binding ProductionLines[0].ItemSelected}" Grid.Row="5" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Center" />
                    <Image Source="/Assets/Inferna.png" Width="30" Height="30" Grid.Row="5" Grid.Column="1" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="화염정광" Grid.Row="5" Grid.Column="2" Margin="0,0,0,0" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ProductionItems[0].Quantity}" Grid.Row="5" Grid.Column="3" Margin="0,0,0,0" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ProductionItems[0].ExpirationTime, StringFormat='mm\\:ss'}" Grid.Row="5" Grid.Column="4" Margin="0,0,0,0" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>


                    <CheckBox IsChecked="{Binding ProductionLines[1].ItemSelected}" Grid.Row="6" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Center" />
                    <Image Source="/Assets/Inferna.png" Width="30" Height="30" Grid.Row="6" Grid.Column="1" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBlock Text="용석탄" Grid.Row="6" Grid.Column="2" Margin="0,0,0,0" FontSize="15" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ProductionItems[1].Quantity}" Grid.Row="6" Grid.Column="3" Margin="0,0,0,0" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ProductionItems[1].ExpirationTime, StringFormat='mm\\:ss'}" Grid.Row="6" Grid.Column="4" Margin="0,0,0,0" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <CheckBox IsChecked="{Binding ProductionLines[2].ItemSelected}" Grid.Row="7" Grid.Column="0" VerticalContentAlignment="Center" HorizontalAlignment="Center" />
                    <Image Source="/Assets/Inferna.png" Width="30" Height="30" Margin="0,0,0,0"  Grid.Row="7" Grid.Column="1" />
                    <TextBlock Text="발화진주" Grid.Row="7" Grid.Column="2" Margin="0,0,0,0" FontSize="15" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ProductionItems[2].Quantity}" Grid.Row="7" Grid.Column="3" Margin="0,0,0,0" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ProductionItems[2].ExpirationTime, StringFormat='mm\\:ss'}" Grid.Row="7" Grid.Column="4" Margin="0,0,0,0" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                    <Button Content="생산" Command="{Binding ProductionCommand}" Width="100" Height="130" Grid.ColumnSpan="5" Grid.Column="5" Grid.RowSpan="5" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <!-- 함수명+Command로 써야함 -->
                    <Separator Grid.ColumnSpan="8" Grid.Row="9" Margin="10"/>

                    <TextBlock Text="생산 현황" Grid.Column="0" Grid.Row="10" Grid.ColumnSpan="2" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <Separator Grid.ColumnSpan="8" Grid.Row="10" Margin="10,20,10,0"/>


                    <Image Source="/Assets/Inferna.png" Width="30" Height="30" Margin="0,0,0,0"  Grid.Row="11" Grid.Column="0" />
                    <TextBlock Text="화염정광" Grid.ColumnSpan="2" Grid.Row="11" Grid.Column="1" Margin="0,0,0,0" FontSize="15" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ProductionLines[0].RemainingTime}" Grid.Row="11" Grid.Column="6" Margin="0,0,0,0" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <ProgressBar Minimum="0" Maximum="100" Value="{Binding ProductionLines[0].Progress}" Margin="15" Grid.Row="11" Grid.Column="3" Grid.ColumnSpan="3"/>

                    <Image Source="/Assets/Inferna.png" Width="30" Height="30" Margin="0,0,0,0"  Grid.Row="12" Grid.Column="0" />
                    <TextBlock Text="용석탄" Grid.ColumnSpan="2" Grid.Row="12" Grid.Column="1" Margin="0,0,0,0" FontSize="15" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ProductionLines[1].RemainingTime}" Grid.Row="12" Grid.Column="6" Margin="0,0,0,0" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <ProgressBar Minimum="0" Maximum="100" Value="{Binding ProductionLines[1].Progress}" Margin="15" Grid.Row="12" Grid.Column="3" Grid.ColumnSpan="3"/>


                    <Image Source="/Assets/Inferna.png" Width="30" Height="30" Margin="0,0,0,0"  Grid.Row="13" Grid.Column="0" />
                    <TextBlock Text="발화진주" Grid.ColumnSpan="2" Grid.Row="13" Grid.Column="1" Margin="0,0,0,0" FontSize="15" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding ProductionLines[2].RemainingTime}" Grid.Row="13" Grid.Column="6" Margin="0,0,0,0" FontSize="15" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <ProgressBar Minimum="0" Maximum="100" Value="{Binding ProductionLines[2].Progress}" Margin="15" Grid.Row="13" Grid.Column="3" Grid.ColumnSpan="3"/>

                </Grid>
            </GroupBox>
        </Grid>


        <!-- 끝 -->

    </UserControl>